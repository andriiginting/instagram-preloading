<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:layout_marginVertical="16dp">

    <include
        android:id="@+id/urlLayout"
        layout="@layout/dialog_url_field_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivClearUrl"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/urlLayout"
        app:layout_constraintTop_toTopOf="@id/urlLayout"
        app:layout_constraintBottom_toTopOf="@id/urlLayout"
        app:srcCompat="@drawable/ic_close_button" />

</androidx.constraintlayout.widget.ConstraintLayout>